<html>
    <head>
       <meta charset="utf-8">
       <link rel="stylesheet" href="/estatico/css/bootstrap.min.css">
   </head>
   <body>
       <div class="container">
            <header>
                <h1> Listagem de livros </h1>
            </header>
           <main>
                <table id="livros" class="table">
                    <thead class="thead-dark">
                        <tr>
                           <th scope="col">ID</th>
                           <th scope="col">Título</th>
                           <th scope="col">Preço</th>
                           <th scope="col">Editar</th>
                           <th scope="col">Remover</th>
                       </tr>
                    </thead>
                    <tbody>
                        <tr id="livro_${livro.id}" for (livro in data.livros)>
                           <th scope="row">${livro.id}</th>
                           <td>${livro.titulo}</td>
                           <td>${livro.preco}</td>
                           <td><a href="/livros/form/${livro.id}">Editar</a></td>
                           <td><a href="#" data-ref="${livro.id}" data-type="remocao">Remover</a></td>
                       </tr>
                    </tbody>
               </table>
           </main>
       </div>
        <script src="/estatico/js/jquery-3.3.1.slim.min.js" />
        <script src="/estatico/js/popper.min.js" />
        <script src="/estatico/js/bootstrap.min.js" />
        <script src="/estatico/js/remove-livro.js" />
   </body>
</html>